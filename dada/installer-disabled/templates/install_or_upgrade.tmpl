<!-- begin install_or_upgrade -->
<!-- tmpl_set name="title" value="Install <!-- tmpl_var PROGRAM_NAME -->" -->
<!-- tmpl_set name="show_profile_widget" value="0" -->

<div id="install_or_upgrade"></div> 

<!-- tmpl_if found_existing_dada_files_dir --> 
	<div class="alert-box info radius">
		<p>Found an existing <!-- tmpl_var Dada_Files_Dir_Name --> directory at:</p>
		<p style="text-align:center"><strong><!-- tmpl_var dada_files_parent_dir -->/.dada_files</strong></p> 
		<p>Want to upgrade?</p>
	</div> 
<!-- /tmpl_if -->

<fieldset> 	
	<form action="<!-- tmpl_var Self_URL -->" method="post" id="install_or_upgrade_form"> 
	<p><input type="radio" name="install_type" id="install" value="install" <!-- tmpl_unless found_existing_dada_files_dir -->checked="checked"<!-- /tmpl_unless --> class="installer_changeDisplayStateDivs" data-state="hide" data-target="upgrade_options" /><label for="install">Installation</label></p>
	<p><input type="radio" name="install_type" id="upgrade" value="upgrade" <!-- tmpl_if found_existing_dada_files_dir -->checked="checked"<!-- /tmpl_if -->  class="installer_changeDisplayStateDivs" data-state="show" data-target="upgrade_options" /><label for="upgrade">Upgrade</label></p>
	
	<div id="upgrade_options" <!-- tmpl_unless found_existing_dada_files_dir -->style="display:none"<!-- /tmpl_unless -->>
	<input type="hidden" name="flavor" value="check_install_or_upgrade" />

		<!-- tmpl_if error_cant_find_dada_files_location --> 
		<div class="alert-box info radius">
			<p><strong>Sorry!</strong></p>
			
			<p>Couldn't find a complete .dada_files directory structure at, <em><!-- tmpl_var current_dada_files_parent_location -->/.dada_files</em></p>
			
			<p>Double-check the path is correct and all files/directories required exist.</p>
			
		</div>
		<!-- /tmpl_if --> 
		<p><label for="current_dada_files_parent_location">Current .dada_files Location:</label><br/>
			<input type="text" name="current_dada_files_parent_location" id="current_dada_files_parent_location" value="<!-- tmpl_if found_existing_dada_files_dir --><!-- tmpl_var dada_files_parent_dir --><!-- /tmpl_if -->" style="text-align:right"  /><span class="fake_input">/<!-- tmpl_var Dada_Files_Dir_Name --></span>
		</p>
		</div>
		
		<div style="text-align:center">

	<input type="submit" name="submitbutton" value="&#187; Continue &#171;" class="processing bigger_button" />
</div>
</form>
</fieldset> 

<!-- end install_or_upgrade -->
