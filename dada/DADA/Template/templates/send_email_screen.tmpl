<form name="send_email" enctype="multipart/form-data" action="<!-- tmpl_var S_PROGRAM_URL -->" method="post">
 
 <input type="hidden" name="f" value="send_email" />
 <input type="hidden" name="advanced" value="yes" />
	  
<!-- tmpl_include message_headers_fieldset_widget.tmpl --> 

<fieldset> 

<legend>Message Body</legend>

<div id="format_type_container">

<ul id="format_type_list">
 <li>
  <a href="#" id="toggleHTML" style="border-left:1px solid black" class="format_type_container_active">HTML Version</a>
 </li>
 <li>
  <a href="#" id="togglePlainText"  class="format_type_container_regular">PlainText Version</a>
 </li>
</ul>
</div>
<div style="clear:both"></div>

<div id="html_message" style="background-color:#fff;border:1px solid black;border-top:0;"> 
<!-- tmpl_include html_message_form_field_widget.tmpl --> 
</div>

<div id="text_message" style="display:none;background-color:#fff;border:1px solid black;border-top:0;"> 
<!-- tmpl_include plaintext_message_form_field_widget.tmpl -->
</div> 

</fieldset>

<script type="text/javascript">

	$('togglePlainText').observe('click', function(event) {
		event.stop();	
		$('togglePlainText').removeClassName('format_type_container_regular');
		$('toggleHTML').addClassName('format_type_container_regular');
		$('togglePlainText').addClassName('format_type_container_active');
		$('toggleHTML').removeClassName('format_type_container_active');
	  	new Effect.Parallel([
			Effect.Fade('html_message'),
			Effect.Appear('text_message')
	  	], { 
	    	duration: 0
  		});
	});
	$('toggleHTML').observe('click', function(event) {
		event.stop();
		$('toggleHTML').removeClassName('format_type_container_regular');
		$('togglePlainText').addClassName('format_type_container_regular');
		$('toggleHTML').addClassName('format_type_container_active');
		$('togglePlainText').removeClassName('format_type_container_active');
		new Effect.Parallel([
			Effect.Fade('text_message'),
			Effect.Appear('html_message')
		], { 
			duration: 0
		});
	});
</script> 

